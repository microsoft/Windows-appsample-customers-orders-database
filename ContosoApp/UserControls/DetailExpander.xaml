                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="OverlayVisibilityStates">
                                    <VisualState x:Name="OverlayNotVisible"/>
                                    <VisualState x:Name="OverlayVisible">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LightDismissLayer" Storyboard.TargetProperty="Fill">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource SplitViewLightDismissOverlayBackground}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <SplitView x:Name="splitView"
                   DisplayMode="Inline"
                   IsPaneOpen="True"
                   PaneBackground="Transparent"
                   PanePlacement="Right"
                   Style="{StaticResource VerticalSplitViewStyle}">
            <SplitView.Pane>
                <ContentPresenter Content="{x:Bind Pane}" Style="{StaticResource PaneContentStyle}"/>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ToggleButton x:Name="Toggle"
                                  Grid.Column="0"
                                  Margin="0,0,4,0"
                                  Checked="ToggleButton_Checked"
                                  IsChecked="{Binding IsPaneOpen,
                                                      Converter={StaticResource nullBoolConverter},
                                                      ElementName=splitView,
                                                      Mode=TwoWay}"
                                  Style="{StaticResource ExpanderButtonStyle}"
                                  Unchecked="ToggleButton_Unchecked"/>
                    <TextBlock Grid.Column="1"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Tapped="Header_Tapped"
                               Text="{x:Bind Label}"/>
                    <ContentPresenter Grid.Column="1"
                                      Content="{x:Bind HeaderContent}"
                                      Style="{StaticResource HeaderContentStyle}"
                                      Tapped="Header_Tapped"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</UserControl>
